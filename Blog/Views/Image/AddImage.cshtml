@model Blog.Models.ArticleImage

@{
    ViewBag.Title = "AddImage";
}

<h2>Add Image to "@ViewBag.articleTitle"</h2>
<div class="container">
    <div class="well">
        
        @using (Html.BeginForm("AddImage", "Image", FormMethod.Post,
                                                                new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(m => m.ArticleId)
            <label for="file">Upload Image:</label>
            <input type="file" name="file" id="file" style="width: 100%; margin-top: 20px; margin-bottom: 20px;" />
            <input type="submit" value="Upload" class="btn btn-success" />
        }
    </div>
</div>

